@{
  Layout = "_Layout";
}

@using PierresTreats.Models
@model List<PierresTreats.Models.Treat>

  <h2>All treats</h2>

  @if (Model.Count == 0)
  {
    <p>There are no treats yet.</p>
  }

<h3>All Flavors</h3>
<ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}","Details", new { id = treat.TreatId})</li>
  }
</ul>

<h3>Your Flavors</h3>
@foreach (Treat treat in ViewBag.UserTreats)
{
<li>@Html.ActionLink($"{treat.Name}","Details", "Treats", new {id = treat.TreatId})</li>
}

<ul>
  <li>@Html.ActionLink("Add a new treat","Create")</li>
  <li>@Html.ActionLink("Back to staff home","Index", "Account")</li>
  <li>@Html.ActionLink("Home","Index","Home")</li>
</ul>