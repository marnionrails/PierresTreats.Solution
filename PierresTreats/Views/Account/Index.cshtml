@{
  Layout = "_Layout";
}
@using System.Security.Claims
<h2>Pierre's Treats: Employees</h2>

@if(User.Identity.IsAuthenticated)
{
  <p>You are logged in as @User.Identity.Name.</p>

  <ul>
  <li>@Html.ActionLink("Manage flavors","Index","Flavors")</li>
  <li>@Html.ActionLink("Manage treats","Index","Treats")</li>
  </ul>
  
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-default" value="Log out" />
  }

  <p>@Html.ActionLink("Register for a staff account", "Register")</p>
  <p>@Html.ActionLink("Log into existing account", "Login")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>

